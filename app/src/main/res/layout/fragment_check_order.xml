<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CheckOrderFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/orderIdWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/insert_order_side_margin"
        android:layout_marginLeft="@dimen/insert_order_side_margin"
        android:layout_marginEnd="@dimen/insert_order_side_margin"
        android:layout_marginRight="@dimen/insert_order_side_margin"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/orderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/insert_order_hint" />

    </android.support.design.widget.TextInputLayout>

</FrameLayout>
